{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/ui": ["./src/app/components/ui/index.ts"],
			"@/icons": ["./src/app/components/icons/index.ts"],
			"@/cv/*": ["./src/app/(routes)/(private)/cv/*"],
			"@/dal/*": ["./src/app/dal/*"],
			"@/actions/*": ["./src/app/actions/*"],
			"@/helpers/*": ["src/helpers/*"],
			"@/constants/*": ["./src/constants/*"],
			"@/db/": ["./src/server/db/*"],
			"@/types/*": ["./src/types/*"],
			"@/components/*": ["./src/components/*"],
			"@/styles/*": ["./src/styles/*"],
			"@/config/*": ["./src/config/*"],
			"@/utils/*": ["./src/utils/*"],
			"@/common/*": ["./src/common/*"],
			"@/assets/*": ["./src/assets/*"],
			"@/pages/*": ["./src/pages/*"],
			"@/routes/*": ["./src/routes/*"],
			"@/hooks/*": ["./src/hooks/*"],
			"@/store/*": ["./src/store/*"]
		},
		"typeRoots": ["./typings/"]
	},
	"include": ["src", ".eslintrc.cjs", "./vite.config.ts"],
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
